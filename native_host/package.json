{
  "name": "mvdcoapp",
  "version": "0.1.0",
  "description": "MAX Video Downloader Native Host - mvdcoapp",
  "main": "index.js",
  "bin": "index.js",
  "pkg": {
    "targets": ["node16-macos-arm64"],
    "outputPath": ".",
    "assets": [
      "lib/**/*",
      "commands/**/*",
      "services/**/*",
      "utils/**/*"
    ]
  },
  "scripts": {
    "build": "./build.sh -build",
    "build:mac": "./build.sh -build mac-arm64",
    "build:win": "./build.sh -build win-x64",
    "build:linux": "./build.sh -build linux-x64",
    "build:all": "npm run build:mac && npm run build:win && npm run build:linux",
    "package:mac": "./build.sh -package-app",
    "package:linux": "./build.sh -package-linux",
    "package:windows": "./build.sh -package-windows",
    "package:all": "npm run package:mac && npm run package:linux && npm run package:windows",
    "install": "./build.sh -install",
    "uninstall": "./build.sh -uninstall",
    "version": "./build.sh -version",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "pkg": "^5.8.1"
  },
  "dependencies": {}
}
